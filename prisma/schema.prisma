generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String         @id @default(cuid())
  email              String         @unique
  password           String
  name               String?
  role               Role           @default(USER)
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
  annualLeaveBalance Float          @default(32)
  toilBalance        Float          @default(0)
  sickLeaveBalance   Float          @default(3)
  resetToken         String?
  resetTokenExpiry   DateTime?
  leaveRequests      LeaveRequest[]
  toilEntries        ToilEntry[]

  @@map("users")
}

model LeaveRequest {
  id        String      @id @default(cuid())
  startDate DateTime
  endDate   DateTime
  status    LeaveStatus @default(PENDING)
  comments  String?
  type      LeaveType   @default(ANNUAL)
  hours     Float?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  userId    String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
  @@index([startDate, endDate])
  @@index([status, createdAt])
  @@map("leave_requests")
}

model ToilEntry {
  id               String    @id @default(cuid())
  userId           String
  date             DateTime
  type             ToilType
  hours            Float
  reason           String
  approved         Boolean   @default(false)
  approvedBy       String?
  approvedAt       DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  adjustmentReason String?
  previousBalance  Float?
  newBalance       Float?
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
  @@index([approved, createdAt])
  @@map("toil_entries")
}

enum Role {
  USER
  ADMIN
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

enum LeaveType {
  ANNUAL
  TOIL
  SICK
}

enum ToilType {
  TRAVEL_LATE_RETURN
  WEEKEND_TRAVEL
  AGENT_PANEL_DAY
  OVERTIME
}
